<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".ModificarDatosMascota">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="20sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView35"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mascota"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <RadioGroup
                    android:layout_width="97dp"
                    android:layout_height="wrap_content"
                    android:checkedButton="@id/rBperro">

                    <RadioButton
                        android:id="@+id/rBperro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Perro"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/rBgato"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Gato"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/rBconejo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Conejo"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/rBotros"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Otros"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </RadioGroup>

            </LinearLayout>

            <TextView
                android:id="@+id/textError1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Máximo 10 caracteres"
                android:textAlignment="center"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="18sp"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/mnombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Nombre"
                android:inputType="textCapCharacters"
                android:textAlignment="center"
                android:textAllCaps="true" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20sp" />

            <EditText
                android:id="@+id/mraza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Raza"
                android:inputType="textCapCharacters"
                android:textAlignment="center"
                android:textAllCaps="true" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20sp" />

            <EditText
                android:id="@+id/mcolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Color"
                android:inputType="text|textCapCharacters"
                android:textAlignment="center"
                android:textAllCaps="true" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Años"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/maños"
                    android:layout_width="96dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="0"
                    android:inputType="number"
                    android:textAlignment="center" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView37"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Distrito   "
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/spinnermDistritos"
                    android:layout_width="253dp"
                    android:layout_height="wrap_content"
                    android:entries="@array/Distrito"
                    android:spinnerMode="dropdown" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20sp" />

            <ImageView
                android:id="@+id/imageViewM"
                android:layout_width="match_parent"
                android:layout_height="251dp"
                app:srcCompat="@drawable/camara" />

            <TextView
                android:id="@+id/textViewprogreso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/buttonRegresar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="atras"
                    android:text="regresar" />

                <Button
                    android:id="@+id/buttonSubir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="subirImagenStream"
                    android:text="subir foto" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>